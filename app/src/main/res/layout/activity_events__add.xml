<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Events_Add">

    <TextView
        android:id="@+id/tVEvents_AddCancel"
        android:layout_width="130dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="@dimen/text_marginleft"
        android:layout_marginTop="@dimen/text_marginleft"
        android:text="@string/cancel"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tVEvents_AddSave"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/text_marginleft"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="@dimen/text_marginleft"
        android:text="@string/safe"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iVEvents_AddPicture"
        android:layout_width="@dimen/event_icon"
        android:layout_height="@dimen/event_icon"
        android:background="@drawable/circle_shape"
        android:padding="@dimen/event_iconmargin"
        android:tint="@color/colorTextLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142"
        app:srcCompat="@android:drawable/ic_menu_gallery" />


    <EditText
        android:id="@+id/eTEvents_AddName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="@dimen/text_marginleft"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:hint="@string/event_name"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iVEvents_AddPicture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308">

        <ImageView
            android:id="@+id/iVEvents_AddHallway"
            android:layout_width="80dp"
            android:layout_height="78dp"

            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_hallway" />

        <ImageView
            android:id="@+id/iVEvents_AddLiving"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_living" />

        <ImageView
            android:id="@+id/iVEvents_AddKitchen"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_kitchen" />

        <ImageView
            android:id="@+id/iVEvents_AddSleeping"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_sleeping" />

        <ImageView
            android:id="@+id/iVEvents_AddBath"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/colorPrimary"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_bath" />


    </LinearLayout>

    <fragment
        android:id="@+id/FRFEventAddFunction"
        android:name="com.sophiafema.home_easylife.EventAddFunctionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>