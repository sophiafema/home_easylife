<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".PlainRoom"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iVPlainRoomBackground"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/iVPlainRoomLinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/pager"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/iVPlainRoomBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iVPlainRoomLinear"
        android:layout_below="@id/tVPlainRoomMenue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/iVPlainRoomLinear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tVPlainRoomMenue">

        <ImageView
            android:id="@+id/iVPlainRoomHallway"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:padding="@dimen/event_iconmargin"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_hallway" />

        <ImageView
            android:id="@+id/iVPlainRoomLiving"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:padding="@dimen/event_iconmargin"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_living" />

        <ImageView
            android:id="@+id/iVPlainRoomKitchen"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:padding="15dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_kitchen" />

        <ImageView
            android:id="@+id/iVPlainRoomSleeping"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:padding="@dimen/event_iconmargin"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_sleeping" />

        <ImageView
            android:id="@+id/iVPlainRoomBath"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/colorPrimary"
            android:padding="@dimen/event_iconmargin"
            android:paddingStart="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_bath" />

    </LinearLayout>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </me.relex.circleindicator.CircleIndicator>


    <TextView
        android:id="@+id/tVPlainRoomMenue"
        android:layout_width="221dp"
        android:layout_height="@dimen/back_button"
        android:layout_marginLeft="@dimen/heading_margin"
        android:layout_marginTop="@dimen/heading_margin"
        android:paddingLeft="55dp"
        android:paddingTop="5dp"
        android:text="Raum"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iVPlainRoomMenue"
        android:layout_width="@dimen/back_button"
        android:layout_height="@dimen/back_button"
        android:contentDescription="MenÃ¼"
        android:tint="@color/colorTextLight"
        app:layout_constraintBottom_toBottomOf="@+id/tVPlainRoomMenue"
        app:layout_constraintEnd_toEndOf="@+id/tVPlainRoomMenue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tVPlainRoomMenue"
        app:layout_constraintTop_toTopOf="@+id/tVPlainRoomMenue"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_above="@+id/indicator"
        android:layout_alignStart="@+id/iVPlainRoomBackground"
        android:layout_alignLeft="@+id/iVPlainRoomBackground"
        android:layout_alignTop="@+id/iVPlainRoomBackground"
        android:layout_alignBottom="@+id/iVPlainRoomBackground"
        app:layout_constraintBottom_toBottomOf="@+id/iVPlainRoomBackground"
        app:layout_constraintEnd_toEndOf="@+id/iVPlainRoomBackground"
        app:layout_constraintStart_toStartOf="@+id/iVPlainRoomBackground"

        app:layout_constraintTop_toTopOf="@+id/iVPlainRoomLinear">

    </androidx.viewpager.widget.ViewPager>

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>