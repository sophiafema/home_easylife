<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".PlainRoom"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iVPlainRoomBackground"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_above="@+id/indicator"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/iVPlainRoomLinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/pager"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text=" "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iVPlainRoomBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:orientation="horizontal"
        android:layout_above="@+id/iVPlainRoomBackground"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/iVPlainRoomBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iVPlainRoomHallway"
            android:layout_width="80dp"
            android:layout_height="78dp"

            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_hallway" />

        <ImageView
            android:id="@+id/iVPlainRoomLiving"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_living" />

        <ImageView
            android:id="@+id/iVPlainRoomKitchen"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_kitchen" />

        <ImageView
            android:id="@+id/iVPlainRoomSleeping"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_sleeping" />

        <ImageView
            android:id="@+id/iVPlainRoomBath"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/colorPrimary"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:tint="@color/colorTextLight"
            app:srcCompat="@drawable/iv_plainroom_bath" />

    </LinearLayout>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </me.relex.circleindicator.CircleIndicator>

    <TextView
        android:id="@+id/tVPlainRoomMenue"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="55dp"
        android:paddingTop="12dp"
        android:text=" "
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iVPlainRoomMenue"
        android:layout_width="49dp"
        android:layout_height="47dp"

        android:layout_alignBottom="@+id/tVPlainRoomMenue"
        android:layout_alignTop="@+id/tVPlainRoomMenue"
        android:layout_alignStart="@+id/tVPlainRoomMenue"
        android:layout_alignLeft="@+id/tVPlainRoomMenue"
        app:layout_constraintBottom_toBottomOf="@+id/tVPlainRoomMenue"
        app:layout_constraintStart_toStartOf="@+id/tVPlainRoomMenue"
        app:layout_constraintTop_toTopOf="@+id/tVPlainRoomMenue"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_input_delete" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_above="@+id/indicator"
        android:layout_alignBottom="@+id/iVPlainRoomBackground"
        android:layout_alignTop="@+id/iVPlainRoomBackground"
        android:layout_alignStart="@+id/iVPlainRoomBackground"
        android:layout_alignLeft="@+id/iVPlainRoomBackground"
        app:layout_constraintBottom_toBottomOf="@+id/iVPlainRoomBackground"
        app:layout_constraintStart_toStartOf="@+id/iVPlainRoomBackground"
        app:layout_constraintTop_toTopOf="@+id/iVPlainRoomBackground"
        app:layout_constraintEnd_toEndOf="@+id/iVPlainRoomBackground"

        tools:layout_editor_absoluteX="405dp"
        tools:layout_editor_absoluteY="10dp">

    </androidx.viewpager.widget.ViewPager>


</androidx.constraintlayout.widget.ConstraintLayout>